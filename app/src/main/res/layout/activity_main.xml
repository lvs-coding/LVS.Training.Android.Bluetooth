<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="lvsandroid.bluetoothtrainingapp.MainActivity">

    <Button
        android:text="Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:id="@+id/btnOff"
        tools:text="Turn Bluetooth off"
        android:onClick="turnBluetoothOff" />

    <Button
        android:text="Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnOff"
        android:layout_alignParentStart="true"
        android:id="@+id/btnFind"
        tools:text="Find discoverabled devices"
        android:onClick="findDiscoverableDevices" />

    <Button
        android:text="View paired devices"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnFind"
        android:layout_alignParentStart="true"
        android:id="@+id/btnViewPaired"
        android:onClick="viewPairedDevices" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/btnViewPaired"
        android:layout_alignParentStart="true"
        android:id="@+id/pairedDevicesListview" />
</RelativeLayout>
